{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "webapp",
  "compatibility_date": "2025-12-23",
  "pages_build_output_dir": "./dist",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "vars": {
    "ENVIRONMENT": "production"
  }
  // 환경 변수는 Cloudflare Pages Dashboard에서 설정:
  // - YOUTUBE_API_KEY
  // - OPENAI_API_KEY
  // - SUPABASE_URL
  // - SUPABASE_SERVICE_ROLE_KEY
  // 
  // 주의: 환경 변수는 wrangler.jsonc에 직접 작성하지 말고
  // Cloudflare Dashboard > Pages > Settings > Environment variables에서 설정
}
